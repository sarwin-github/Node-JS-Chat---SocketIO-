 
<!doctype html>
<html>
<head>
  <title>User Registration</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/font-awesome.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
    <style>
      html,body{
        overflow-x: hidden; 
        background-color: whitesmoke;
      }
    </style>
</head>
<body>
  <div class="container-fluid" style="padding-top:20px;">
    <div class="container">
      	<div class="row">
           	<div class="col-sm-12">
             	<div>
                <div class="col-sm-6 col-sm-offset-3 panel panel-body">
                  <h3>User Login <span class="pull-right" style="font-size: 15px;"><a href="/chat/home">Back to Chat Home</a></span></h3><hr>
                  <% if(error.length > 0){ %>
                    <div class="alert alert-danger alert-dismissable fade in text-center" style="border-style: solid; border-width: 2px;">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <% error.forEach(function(error){ %>
                          <%= error %><br>
                        <%});%>
                    </div>
                  <%}%>
                  <form action="/users/login" method="post">
                    <div class="form-group">
                      <label>Username or Email</label>
                      <input type="text" class="form-control" name="username" required>
                    </div>
                    
                    <div class="form-group">
                      <label>Password</label>
                      <input type="password" class="form-control" name="password" required>
                    </div>
                    
                    <hr>
                    Create a new user. <a href="/users/signup">Sign Up</a>
                    <hr>

                    <div class="text-right">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-warning">   Login   </button>
                    </div>
                  </form>

                </div>
                
             	</div>
           	</div>
        </div>
      </div>
    </div>
  </body>
</html>

