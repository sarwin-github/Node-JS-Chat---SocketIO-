 
<!doctype html>
<html>
<head>
  <title>User Registration</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/public/style/bootstrap.min.css">
  <link rel="stylesheet" href="/css/font-awesome.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
    <style>
      html,body{
        overflow-x: hidden; 
        background-color: whitesmoke;
      }
    </style>
</head>
<body>
<%- include("../templates/navbar.ejs") %>
<div class="container-fluid" style="padding-top:20px;">
  <div class="container">
  	<div class="row">
       	<div class="col-sm-12">
         	<div>
            <div class="col-sm-6 offset-3 card card-body shadow-sm rounded">
              <h3>Create a new user <span class="pull-right" style="font-size: 15px;"><a href="/chat/home">Back to Chat Home</a></span></h3><hr>
              <% if(error.length > 0){ %>
                <div class="alert alert-danger alert-dismissable text-center" style="border-style: solid; border-width: 2px;">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <% error.forEach(function(error){ %>
                      <%= error %><br>
                    <%});%>
                </div>
              <%}%>
              <form action="/users/signup" method="post">
                <div class="form-group">
                  <label>Username</label>
                  <input type="text" class="form-control" name="username" required>
                </div>

                <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" name="email" required>
                </div>

                <hr>
                <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password" required>
                </div>

                <div class="form-group">
                  <label>Confirm Password</label>
                  <input type="password" class="form-control" name="confirmPassword">
                </div>
                
                <hr>
                Already have an account? <a href="/users/login">Login</a>
                <hr>

                <div class="text-right">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="btn btn-warning">Sign up</button>
                </div>
              </form>
            </div>
            
         	</div>
       	</div>
    </div>
  </div>
</div>
<br>
<%- include("../templates/footer.ejs") %>
</body>
</html>

