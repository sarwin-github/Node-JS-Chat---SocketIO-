<!doctype html>
<html>
  <head>
  <title><%= locals.title %> - Chat</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/font-awesome.css">
  <link rel="stylesheet" href="/public/style/chatBubble.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/javascript/chat/chat.js"></script>
  <style>
      html,body{
        overflow-x: hidden; 
        background-color: whitesmoke;
      }

      .foo {
        max-height:600px;
        overflow-y:scroll;
      }
  </style>
</head>
<body> 
<%- include("../templates/navbar.ejs") %>
<div class="container-fluid" style="padding: 0px;">
  <div class="container-fluid" style="margin-bottom: 5%;">
    <div class="row">
      <div class="col-sm-3" style="background-color: white; color: #434547; padding:20px;">
        <div>
          <% 
            var encodeSpaces = function(data){
              var encodedData = encodeURI((data).replace(/\s/g , "-"));
              return encodedData;
            } 
          %>
          <div id="connectedUserListTable">
            <legend style="color:#434547;">Online Users</legend>
            <ul id="connectedUserList"></ul>
          </div>
          <h3>Chat Rooms</h3>
          <table class="table">
            <tbody>
              <% chatrooms.forEach(function(rooms){%>
                <tr>
                  <td><a href="/chat/rooms/<%= encodeSpaces(rooms.chatroom) %>"><%= rooms.chatroom %></a></td>
                </tr>
              <%});%>
            </tbody>
          </table>
        </div>  
      </div>

      <div class="col-sm-7" style="background-color:#fffdf9;"><br>
        <div class="panel" style="background-color:#fffdf9;">
          <div class="panel-body"  style="padding-top: 0px;"> 
            <div id="welcomeMessage"></div>
            <div class="foo" id="messages" style="padding:20px; color: white"></div>
            <span id="notifyUser"></span>
          </div>

          <div class="panel-footer">
            <form id="form" action="" onsubmit="return submitfunction();" > 
              <div class="input-group">
                <input type="hidden" id="user" value="" />
                <input id="message" autocomplete="off" class="form-control" 
                  onkeyup="notifyTyping();" placeholder="Type your message here.." />
                <span class="input-group-btn"> 
                  <button class="btn btn-primary" type="submit">Send</button>
                </span>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-sm-2" style="background-color: white; min-height: 200px;"><br>
        <div class="userData"></div>
        <div>
          <% if(user){%>
          <input type="hidden" name="currentUser" id="currentUser" value="<%= user %>">
          <%} else {%> 
          <% randomNumber = Math.floor(Math.random() * (999 - 1 + 1)) + 1%>
            <input type="hidden" name="currentUser" id="currentUser" value="GuestUser<%= randomNumber%>">
          <%}%>

          <div id="connectedUserListTable" >
            <h5 id="chatWith"><strong class="text-primary">Room:</strong> </h5>
            <ul id="connectedUserList"></ul>
          </div>

          <div>
            <table class="table">
              <tbody id="connectedUser"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</div>
<!-- FOOTER -->
<br>
<%- include("../templates/footer.ejs") %>
<!-- // END OF FOOTER --> 
</body>
</html>